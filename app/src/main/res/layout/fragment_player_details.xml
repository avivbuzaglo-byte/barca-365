<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:clickable="true"
    android:focusable="true">

    <ProgressBar
        android:id="@+id/player_detail_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/barca_blue"
        android:visibility="gone"
        tools:visibility="visible"
        android:elevation="10dp"/>

    <ScrollView
        android:id="@+id/player_detail_content_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/hero_gradient_background">

                <ImageView
                    android:id="@+id/back_arrow_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#FFFFFF"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/player_detail_image"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher_background"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="4dp"
                    android:elevation="8dp"/>

                <TextView
                    android:id="@+id/player_detail_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="16dp"
                    android:textSize="80sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:alpha="0.5"
                    tools:text="9"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-40dp"
                android:background="@drawable/content_card_background"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingHorizontal="24dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/player_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    tools:text="Robert Lewandowski"/>

                <TextView
                    android:id="@+id/player_detail_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="#2563EB"
                    android:textStyle="bold"
                    tools:text="Striker"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:columnCount="3"
                    android:rowCount="1"
                    android:alignmentMode="alignMargins">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/info_card_background"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textSize="12sp"
                            android:textColor="#AAAAAA"/>
                        <TextView
                            android:id="@+id/stat_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:text="35"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/info_card_background"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height"
                            android:textSize="12sp"
                            android:textColor="#AAAAAA"/>
                        <TextView
                            android:id="@+id/stat_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:text="185 cm"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/info_card_background"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nation"
                            android:textSize="12sp"
                            android:textColor="#AAAAAA"/>
                        <TextView
                            android:id="@+id/stat_nationality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:text="POL"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>
                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/stats_card_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This sesason"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_field"
                                app:tint="#2563EB"
                                android:layout_marginBottom="8dp"/>
                            <TextView
                                android:id="@+id/stat_appearances"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="32sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="-"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Apps"
                                android:textSize="12sp"
                                android:textColor="#AAAAAA"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/icon_stat_goals"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_ball"
                                app:tint="#2563EB"
                                android:layout_marginBottom="8dp"/>
                            <TextView
                                android:id="@+id/stat_goals"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="32sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="-"/>
                            <TextView
                                android:id="@+id/stat_label_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Goals"
                                android:textSize="12sp"
                                android:textColor="#AAAAAA"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/icon_stat_assists"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_boot"
                                app:tint="#2563EB"
                                android:layout_marginBottom="8dp"/>
                            <TextView
                                android:id="@+id/stat_assists"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="32sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="-"/>
                            <TextView
                                android:id="@+id/stat_label_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Assists"
                                android:textSize="12sp"
                                android:textColor="#AAAAAA"/>
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>